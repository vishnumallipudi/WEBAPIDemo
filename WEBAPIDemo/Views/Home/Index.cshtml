@section Scripts {
    
<script type="text/javascript">
    $(document).ready(function () {
        //alert("Jquery is working fine");
        $("#getEmps").on("click", function () {
            myfun();
        }); ClearEmps
        $("#ClearEmps").on("click", function () {
            $('#emptable').empty();
        });

        function myfun() {
            $.ajax({
                type: 'Get',
                url: '../api/employees?gender=all',
                dataType: 'json'
            }).done(function (data) {
                var table = $("#emptable");
                $.each(data, function (index, val) {
                    table.append("<tr>");
                    //console.log(index + "--" + val.firstName);
                    table.append("<td>" + val.firstName + "</td>");
                    table.append("<td>" + val.lastName + "</td>");
                    table.append("<td>" + val.gender + "</td>");
                    table.append("<td>" + val.salary + "</td>");
                    table.append("</tr>");

                })
            });
        }
        

    });
</script>

    
    
